pipeline {
    agent any
    tools {
  maven 'M2_HOME'      
    }
    triggers {
  pollSCM('* * * * *')
    }
    stages {
        stage('maven package') {
            steps {
                sh 'mvn clean'
                sh 'mvn install'
                sh 'mvn package'
                sleep 5
            }
        }
          stage('build') {
            steps {
                sh 'mvn test'
                sleep 5
            }
        }
          stage('Test') {
            steps {
                echo 'test'
                sleep 5
            }
        }
          stage('deploy') {
            steps {
                echo 'deploy'
                sleep 4
            }
        } 
          stage('deploy') {
            steps {
                echo 'deploy'
                sleep 4
            }
        }
    }
}